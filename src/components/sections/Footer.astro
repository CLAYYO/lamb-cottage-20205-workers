        <!-- Legal Links -->
        <div class="flex flex-wrap justify-center md:justify-end space-x-6 text-sm">
          <a href="/privacy-policy" class="text-lamb-green-light hover:text-white transition-colors duration-200">
            Privacy Policy
          </a>
          <a href="/terms-conditions" class="text-lamb-green-light hover:text-white transition-colors duration-200">
            Terms &amp; Conditions
