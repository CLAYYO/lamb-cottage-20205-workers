      </div>
      
      <!-- Contact Information -->
      <div class="space-y-6">
        <h4 class="text-lg font-semibold text-white">
          Contact Information
        </h4>
        
        <div class="space-y-4">
          <!-- Address -->
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-lamb-green-light mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
