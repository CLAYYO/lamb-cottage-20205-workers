---

<footer class="bg-lamb-green-dark text-white" transition:name="footer">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Information -->
      <div class="space-y-6">
        <div>
          <h3 class="text-2xl font-bold text-white mb-4">
            Lamb Cottage
            <span class="block text-lamb-green-light text-lg font-medium">
              Caravan Park
            </span>
          </h3>
