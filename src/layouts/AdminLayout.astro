---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Lamb Cottage CMS Admin Panel' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} - Lamb Cottage CMS</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', system-ui, sans-serif;
        background: #f8fafc;
        color: #1f2937;
        line-height: 1.6;
      }
      
      .admin-container {
        display: flex;
        min-height: 100vh;
      }
      
      .sidebar {
        width: 250px;
        background: #1f2937;
        color: white;
        padding: 1.5rem;
        position: fixed;
        height: 100vh;
        overflow-y: auto;
      }
      
      .sidebar-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #374151;
      }
      
      .sidebar-header h1 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #4CAF50;
        margin-bottom: 0.5rem;
      }
      
      .sidebar-header p {
        font-size: 0.875rem;
        color: #9ca3af;
      }
      
      .nav-menu {
        list-style: none;
      }
      
      .nav-item {
        margin-bottom: 0.5rem;
      }
      
      .nav-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: #d1d5db;
        text-decoration: none;
        border-radius: 0.5rem;
        transition: all 0.2s;
      }
      
      .nav-link:hover,
      .nav-link.active {
        background: #374151;
        color: white;
      }
      
      .nav-icon {
        margin-right: 0.75rem;
        font-size: 1.125rem;
      }
      
      .main-content {
        flex: 1;
        margin-left: 250px;
        padding: 2rem;
      }
      
      .top-bar {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 0.75rem;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        display: flex;
        justify-content: between;
        align-items: center;
      }
      
      .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1f2937;
        flex: 1;
      }
      
      .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      
      .user-avatar {
        width: 2rem;
        height: 2rem;
        background: #4CAF50;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
      }
      
      .logout-btn {
        background: #dc2626;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        cursor: pointer;
        font-size: 0.875rem;
        transition: background-color 0.2s;
      }
      
      .logout-btn:hover {
        background: #b91c1c;
      }
      
      .content-area {
        background: white;
        border-radius: 0.75rem;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        min-height: 500px;
      }
      
      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(-100%);
          transition: transform 0.3s;
        }
        
        .sidebar.open {
          transform: translateX(0);
        }
        
        .main-content {
          margin-left: 0;
          padding: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="admin-container">
      <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <h1>üèïÔ∏è Lamb Cottage</h1>
          <p>Content Management</p>
        </div>
        
        <nav>
          <ul class="nav-menu">
            <li class="nav-item">
              <a href="/admin" class="nav-link" data-page="dashboard">
                <span class="nav-icon">üìä</span>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/content" class="nav-link" data-page="content">
                <span class="nav-icon">üìù</span>
                Content Editor
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/pages" class="nav-link" data-page="pages">
                <span class="nav-icon">üìÑ</span>
                Pages Editor
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/images" class="nav-link" data-page="images">
                <span class="nav-icon">üñºÔ∏è</span>
                Image Manager
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/reviews" class="nav-link" data-page="reviews">
                <span class="nav-icon">‚≠ê</span>
                Reviews
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/emails" class="nav-link" data-page="emails">
                <span class="nav-icon">üìß</span>
                Email Management
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/settings" class="nav-link" data-page="settings">
                <span class="nav-icon">‚öôÔ∏è</span>
                Settings
              </a>
            </li>
          </ul>
        </nav>
      </aside>
      
      <main class="main-content">
        <div class="top-bar">
          <h1 class="page-title">{title}</h1>
          <div class="user-info">
            <div class="user-avatar">
              A
            </div>
            <span>Admin (No Auth)</span>
          </div>
        </div>
        
        <div class="content-area">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // Highlight active nav item
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.nav-link');
      
      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('active');
        }
      });
      
      // Mobile sidebar toggle (for future mobile support)
      function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        if (sidebar) {
          sidebar.classList.toggle('open');
        }
      }
    </script>
  </body>
</html>