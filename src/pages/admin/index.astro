        </div>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="quick-actions">
      <h2>Quick Actions</h2>
      <div class="action-grid">
        <a href="/admin/content" class="action-card">
          <div class="action-icon">‚úèÔ∏è</div>
