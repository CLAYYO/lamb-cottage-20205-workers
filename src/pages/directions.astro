                  <div class="space-y-1">
                    <div><span class="font-medium">Latitude:</span> <code class="bg-white px-2 py-1 rounded text-sm">53.2345° N</code></div>
                    <div><span class="font-medium">Longitude:</span> <code class="bg-white px-2 py-1 rounded text-sm">-2.6789° W</code></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Driving Directions -->
          <div class="space-y-8">
            <div>
              <h2 class="text-3xl font-bold text-gray-800 mb-6">Driving Directions</h2>
              
              <!-- From Major Cities -->
              <div class="space-y-6">
                <!-- From Manchester -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                  <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                    <svg class="w-6 h-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
