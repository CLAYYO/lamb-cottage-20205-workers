---
export const prerender = true;

// Facilities - Lamb Cottage Caravan Park
import BaseLayout from '../layouts/BaseLayout.astro';

// Import content directly - this works in both Node.js and Workers environments
import facilitiesContentRaw from '../../content/pages/facilities.json';

// Ensure we have the content as an object
const pageContent = typeof facilitiesContentRaw === 'string' ? JSON.parse(facilitiesContentRaw) : facilitiesContentRaw;

// Page metadata
const title = pageContent.title || "Facilities";
const description = pageContent.description || "Discover our facilities at Lamb Cottage Caravan Park";
---

<BaseLayout title={title} description={description}>
  
  <main class="min-h-screen bg-gradient-to-b from-blue-50 to-white" transition:name="main-content">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-600 to-blue-700" style={`height: 20vh; ${pageContent.hero.backgroundImage?.src ? `background-image: url('${pageContent.hero.backgroundImage.src}'); background-size: cover; background-position: center;` : ''}`}>
      <div class="absolute inset-0 bg-black" style={`opacity: ${pageContent.hero.backgroundImage?.opacity || 0.4}`}></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center h-full flex flex-col justify-center">
        <h1 class="text-2xl md:text-3xl font-bold text-white mb-2">
          {pageContent.hero.title}
        </h1>
        <p class="text-lg text-blue-100 max-w-3xl mx-auto">
          {pageContent.hero.subtitle}
        </p>
      </div>
    </section>

    <!-- Main Facilities Grid -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Luxury Shower Rooms -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-6">
