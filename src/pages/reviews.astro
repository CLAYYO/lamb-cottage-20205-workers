---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';

// Import content directly - this works in both Node.js and Workers environments
import reviewsContentRaw from '../../content/pages/reviews.json';

// Ensure we have the content as an object
const pageContent = typeof reviewsContentRaw === 'string' ? JSON.parse(reviewsContentRaw) : reviewsContentRaw;
