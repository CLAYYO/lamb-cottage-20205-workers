---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

const title = 'Static Caravans - Lamb Cottage Caravan Park';
const description = 'Discover our premium static caravan options at Lamb Cottage Caravan Park. Perfect for extended stays and seasonal holidays in beautiful Cheshire.';
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
    <!-- Hero Section -->
    <section class="relative py-16 bg-gradient-to-r from-blue-600 to-blue-700">
      <div class="absolute inset-0 bg-black opacity-20"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Static Caravans
        </h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          Experience the comfort and convenience of our premium static caravan options
        </p>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-800 mb-4">Your Home Away From Home</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Our static caravans offer the perfect blend of comfort, convenience, and value for money. 
            Whether you're looking for a seasonal pitch or considering purchasing your own holiday home, 
            we have options to suit every need.
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <img 
              src="https://trae-api-us.mchost.guru/api/ide/v1/text_to_image?prompt=luxury%20static%20caravan%20on%20beautiful%20landscaped%20pitch%20with%20decking%20and%20outdoor%20furniture%20surrounded%20by%20mature%20trees%20and%20well%20maintained%20gardens&image_size=landscape_4_3" 
